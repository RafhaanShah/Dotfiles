### loads all other dot files

# location of dotfile repository
DOTFILE_DIR="${HOME}/Dotfiles"

# helper functions
[ -f "${DOTFILE_DIR}/.helpers" ] && source "${DOTFILE_DIR}/.helpers"

# exported environment variables
[ -f "${DOTFILE_DIR}/.exports" ] && source "${DOTFILE_DIR}/.exports"

# aliases
[ -f "${DOTFILE_DIR}/.aliases" ] && source "${DOTFILE_DIR}/.aliases"

# if on wsl, load wsl file
if _is_wsl; then
    [ -f "${DOTFILE_DIR}/.wsl" ] && source "${DOTFILE_DIR}/.wsl"
fi

# if on macOS, load macOS file
if _is_macos; then
    [ -f "${DOTFILE_DIR}/.macos" ] && source "${DOTFILE_DIR}/.macos"
fi

# functions (to be loaded after aliases as aliases are read at function definition)
[ -f "${DOTFILE_DIR}/.functions" ] && source "${DOTFILE_DIR}/.functions"

# print some info at the start of a new terminal
_command_exists date && date
# _command_exists uptime && uptime
_is_bash && echo "${USER} @ ${HOSTNAME} -> bash ${BASH_VERSION}" \
    && [ -f "${DOTFILE_DIR}/.bash_prompt" ] && source "${DOTFILE_DIR}/.bash_prompt"
_is_zsh && echo "${USER} @ ${HOST} -> zsh ${ZSH_VERSION}" \
    && [ -f "${DOTFILE_DIR}/.zsh_prompt" ] && source "${DOTFILE_DIR}/.zsh_prompt"

unset DOTFILE_DIR
